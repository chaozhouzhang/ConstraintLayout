<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Space
        android:id="@+id/guide_line_start"
        android:layout_width="1px"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="@id/iv_1"
        app:layout_constraintEnd_toEndOf="@+id/iv_1"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="@+id/iv_1"
        app:layout_constraintTop_toTopOf="@id/iv_1" />

    <Space
        android:id="@+id/guide_line_end"
        android:layout_width="1px"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="@id/iv_1"
        app:layout_constraintEnd_toEndOf="@id/tv_2"
        app:layout_constraintHorizontal_bias="1.18"
        app:layout_constraintStart_toStartOf="@+id/tv_2"
        app:layout_constraintTop_toTopOf="@id/iv_1" />

    <Space
        android:id="@+id/guide_line_top"
        android:layout_width="1px"
        android:layout_height="1px"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/iv_1"
        app:layout_constraintEnd_toEndOf="@+id/iv_1"
        app:layout_constraintStart_toStartOf="@+id/iv_1"
        app:layout_constraintTop_toTopOf="@id/iv_1"
        app:layout_constraintVertical_bias="0.192" />

    <Space
        android:id="@+id/guide_line_bottom"
        android:layout_width="1px"
        android:layout_height="1px"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/iv_1"
        app:layout_constraintEnd_toEndOf="@+id/iv_1"
        app:layout_constraintStart_toStartOf="@+id/iv_1"
        app:layout_constraintTop_toTopOf="@id/iv_1"
        app:layout_constraintVertical_bias="0.846" />


    <View
        android:id="@+id/view_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/guide_line_bottom"
        app:layout_constraintEnd_toEndOf="@id/guide_line_end"
        app:layout_constraintStart_toStartOf="@id/guide_line_start"
        app:layout_constraintTop_toTopOf="@+id/guide_line_top">

    </View>

    <!--  修改此处尺寸大小，会改变整体布局大小      -->
    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="@id/iv_1"
        app:layout_constraintEnd_toEndOf="@id/iv_1"
        app:layout_constraintStart_toStartOf="@id/iv_1"
        app:layout_constraintTop_toTopOf="@id/iv_1">

    </TextView>


    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_1"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>